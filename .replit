modules = ["python-3.11", "python3", "nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Fishing Bot"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Test Bot"

[[workflows.workflow]]
name = "Fishing Bot"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python fishing_bot.py"
waitForPort = 5000

[[workflows.workflow]]
name = "Test Bot"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m unittest test_bot.py -v"

[deployment]
run = ["sh", "-c", "python fishing_bot.py"]
